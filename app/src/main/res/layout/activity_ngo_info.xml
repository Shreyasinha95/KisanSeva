<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#b2ebf2"
    tools:context="com.shreyathegreat.kisanseva.NgoInfo">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/iv_photo"
        android:src="@drawable/ab"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_call"
        android:src="@drawable/phoneicon"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/iv_photo"
        android:layout_alignEnd="@+id/iv_photo" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Karnataka Organic Growers Association"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09742350560"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_call"
        android:layout_toStartOf="@+id/iv_call" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/btn"
        android:layout_below="@+id/iv_call"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :"
        android:id="@+id/adress"
        android:layout_marginTop="31dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Govindappa road, Basavanagudi, Bangalore, India 560004"
        android:id="@+id/dadress"
android:textSize="20dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/adress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
