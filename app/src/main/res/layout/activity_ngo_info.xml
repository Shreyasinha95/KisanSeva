<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#c8e6c9"
    tools:context="com.shreyathegreat.kisanseva.NgoInfo">

    <ImageView
        android:layout_width="850dp"
        android:layout_height="220dp"
        android:id="@+id/iv_photo"
        android:src="@drawable/ab"
        android:layout_below="@+id/textViewnext"

        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Karnataka Organic Growers Association"
        android:id="@+id/textView"
        android:textColor="#512da8"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textViewnext"
        android:textColor="#512da8"
        android:textSize="28dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="180dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09742350560"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#212121"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/iv_photo" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/callme"
        android:id="@+id/btn"
        android:layout_below="@id/iv_photo"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :"
        android:id="@+id/adress"
        android:layout_marginTop="31dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Govindappa road, Basavanagudi, Bangalore, India 560004"
        android:id="@+id/dadress"
android:textSize="20dp"
        android:textColor="#212121"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/adress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
